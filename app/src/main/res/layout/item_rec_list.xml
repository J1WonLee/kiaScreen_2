<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/rec_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메뉴 11111"
        android:fontFamily="@font/kia_medium"
        android:textColor="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    
    <TextView
        android:id="@+id/rec_result_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="결과11111"
        android:fontFamily="@font/kiab"
        android:layout_marginTop="@dimen/menu_text_margintop"
        app:layout_constraintTop_toBottomOf="@+id/rec_result_title"
        app:layout_constraintLeft_toLeftOf="@+id/rec_result_title" />
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rec_result_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_search_result_24"
        app:layout_constraintLeft_toRightOf="@+id/rec_result_content"
        app:layout_constraintTop_toTopOf="@+id/rec_result_content" />

</androidx.constraintlayout.widget.ConstraintLayout>