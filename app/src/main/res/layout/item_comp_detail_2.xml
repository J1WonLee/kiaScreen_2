<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_comp_cfc_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/comp_item_linear_marginTop"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/cfc_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="복합 연비(km/kWh)" />

        <TextView
            android:id="@+id/cfc_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comp_item_text_marginTop"
            android:textSize="16dp"
            android:fontFamily="@font/kiamedium"
            android:text="5.3km/kWh" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_comp_city_fc_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/comp_item_linear_marginTop"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_comp_cfc_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/city_fc_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도심 연비(km/kWh)" />

        <TextView
            android:id="@+id/city_fc_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comp_item_text_marginTop"
            android:textSize="16dp"
            android:fontFamily="@font/kiamedium"
            android:text="4.3km/kWh" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_comp_hfc_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/comp_item_linear_marginTop"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_comp_city_fc_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/hfc_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고속도로 연비(km/kWh)" />

        <TextView
            android:id="@+id/hfc_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comp_item_text_marginTop"
            android:textSize="16dp"
            android:fontFamily="@font/kiamedium"
            android:text="4.8km/kWh" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_comp_feg_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/comp_item_linear_marginTop"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_comp_hfc_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/feg_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연비 등급" />

        <TextView
            android:id="@+id/feg_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comp_item_text_marginTop"
            android:textSize="16dp"
            android:fontFamily="@font/kiamedium"
            android:text="전기차" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_comp_insurance_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/comp_item_linear_marginTop"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_comp_feg_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/insurance_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="차량 보험 등급" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/insurance_guide_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/comp_guide_icon_marginLeft"
                android:src="@drawable/icon_info_outline"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/insurance_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comp_item_text_marginTop"
            android:textSize="16dp"
            android:fontFamily="@font/kiamedium"
            android:hint="17" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_comp_c02_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/comp_item_linear_marginTop"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_comp_insurance_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/co2_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이산화탄소 배출량 (g/km)" />

        <TextView
            android:id="@+id/co2_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comp_item_text_marginTop"
            android:textSize="16dp"
            android:fontFamily="@font/kiamedium"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_comp_maintacne_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/comp_item_linear_marginTop"

        app:layout_constraintTop_toBottomOf="@+id/item_comp_c02_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/maintance_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="유지 비용" />

        <TextView
            android:id="@+id/maintacne_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comp_item_text_marginTop"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:fontFamily="@font/kiamedium"
            android:text="1,000,000 원" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/maintance_spinner_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/maintance_used_period_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="운행 기간"
                android:layout_marginTop="@dimen/comp_item_linear_marginTop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/used_period_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/maintance_used_period_tv"
                app:layout_constraintLeft_toLeftOf="@+id/maintance_used_period_tv" />

            <TextView
                android:id="@+id/maintance_driving_distance_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="운행 거리"
                android:textSize="14sp"
                android:fontFamily="@font/kialight"
                android:layout_marginTop="@dimen/comp_item_linear_marginTop"
                app:layout_constraintTop_toBottomOf="@+id/used_period_spinner"
                app:layout_constraintLeft_toLeftOf="parent" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/driving_distance_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/maintance_driving_distance_tv"
                app:layout_constraintLeft_toLeftOf="@+id/maintance_driving_distance_tv" />

            <TextView
                android:id="@+id/car_tax_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자동차세"
                android:textSize="14sp"
                android:fontFamily="@font/kialight"
                android:layout_marginTop="@dimen/comp_item_text_marginTop"
                app:layout_constraintTop_toBottomOf="@+id/driving_distance_spinner"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/car_tax_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="390,000원"
                android:textSize="16dp"
                android:fontFamily="@font/kiamedium"
                app:layout_constraintTop_toBottomOf="@+id/car_tax_title_tv"
                app:layout_constraintLeft_toLeftOf="@+id/car_tax_title_tv" />

            <TextView
                android:id="@+id/car_insurance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보험료"
                android:textSize="14sp"
                android:fontFamily="@font/kialight"
                android:layout_marginTop="@dimen/comp_item_text_marginTop"
                app:layout_constraintTop_toBottomOf="@+id/car_tax_content_tv"
                app:layout_constraintLeft_toLeftOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/insurance_img"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/icon_info_outline"
                app:layout_constraintTop_toTopOf="@+id/car_insurance_tv"
                app:layout_constraintLeft_toRightOf="@+id/car_insurance_tv"
                app:layout_constraintBottom_toBottomOf="@+id/car_insurance_tv"/>

            <TextView
                android:id="@+id/car_insurance_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="390,000원"
                android:textSize="16dp"
                android:fontFamily="@font/kiamedium"
                app:layout_constraintTop_toBottomOf="@+id/car_insurance_tv"
                app:layout_constraintLeft_toLeftOf="@+id/car_insurance_tv"  />

            <TextView
                android:id="@+id/car_fuel_cost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유류비"
                android:textSize="14sp"
                android:fontFamily="@font/kialight"
                android:layout_marginTop="@dimen/comp_item_text_marginTop"
                app:layout_constraintTop_toBottomOf="@+id/car_insurance_content_tv"
                app:layout_constraintLeft_toLeftOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fuel_cost_img"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/icon_info_outline"
                android:layout_marginLeft="@dimen/comp_guide_icon_marginLeft"
                app:layout_constraintTop_toTopOf="@+id/car_fuel_cost_tv"
                app:layout_constraintLeft_toRightOf="@+id/car_fuel_cost_tv"
                app:layout_constraintBottom_toBottomOf="@+id/car_fuel_cost_tv"/>

            <TextView
                android:id="@+id/car_fuel_cost_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="390,000원"
                android:textSize="16dp"
                android:fontFamily="@font/kiamedium"
                app:layout_constraintTop_toBottomOf="@+id/car_fuel_cost_tv"
                app:layout_constraintLeft_toLeftOf="@+id/car_fuel_cost_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>